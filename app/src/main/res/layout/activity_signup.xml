<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asoluter.litest.LoginActivity"
    android:gravity="center">

    <include android:id="@+id/signup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/titleLoginView"
            android:textSize="75sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-64dp" />

        <android.support.v7.widget.CardView
            android:layout_width="330dp"
            android:layout_height="320dp"
            android:elevation="8dp"
            android:id="@+id/cardLoginView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:theme="@style/AppTheme"
                android:gravity="center_vertical|center_horizontal">


                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/name_label"
                    android:ems="10"
                    android:id="@+id/nameText"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/login_label"
                    android:ems="10"
                    android:id="@+id/loginText"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/mail_label"
                    android:ems="10"
                    android:id="@+id/mailLoginText"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passLoginText"
                    android:hint="@string/pass_label"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/birth_label"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/birthText"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:text="@string/title_activity_signup"
                    android:theme="@style/LoginButtons"
                    android:background="@drawable/button_shape_login"
                    android:id="@+id/signupButon"
                    android:layout_marginBottom="4dp"
                    android:capitalize="characters"
                    android:clickable="true"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
